{
  "include": ["src"],
  "compilerOptions": {
    // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping#node-18
    "types": ["node", "jest"],
    "lib": ["dom", "es2022"],
    "module": "node16",
    "target": "es2022",
    "declaration": true,
    "isolatedModules": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  }
}
