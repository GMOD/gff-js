{
  "include": ["src"],
  "compilerOptions": {
    // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping#node-16
    "types": ["node", "jest"],
    "lib": ["dom", "es2021"],
    "target": "es2021",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  }
}
